<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="HangmanGame.Views.ConfirmationPopup"
    Color="Transparent">
    
    <Border
        WidthRequest="320"
        BackgroundColor="{AppThemeBinding Light=White, Dark=#2C2C2C}"
        StrokeShape="RoundRectangle 24"
        Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#333333}"
        Padding="24">
        <VerticalStackLayout Spacing="20">
            <Label 
                Text="Oyundan Çık"
                FontSize="22"
                FontAttributes="Bold"
                HorizontalOptions="Center" />
            <Label
                Text="Çıkmak istediğinizden emin misiniz?"
                FontSize="16"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}"/>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,10,0,0">
                <Button
                    Grid.Column="0"
                    Text="Hayır"
                    Clicked="OnNoClicked"
                    BackgroundColor="{AppThemeBinding Light=#F0F0F0, Dark=#505050}"
                    TextColor="{AppThemeBinding Light=Black, Dark=White}"
                    BorderColor="Transparent"
                    CornerRadius="16"
                    Padding="12,10"/>

                <Button
                    Grid.Column="1"
                    Text="Evet, Çık"
                    Clicked="OnYesClicked" 
                    BackgroundColor="#FF5252"
                    TextColor="White"
                    CornerRadius="16"
                    Padding="12,10"/>
            </Grid>
        </VerticalStackLayout>
    </Border>
</toolkit:Popup> 